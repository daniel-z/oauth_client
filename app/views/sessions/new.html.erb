<div class="container my-5" data-turbo="false">
  <h1 class="mt-5">Welcome to OAuth App</h1>
  <p>Click the button below to authenticate using the OAuth provider.</p>
  <%= form_tag(signin_path, method: :get, class: 'mt-3') do %>
    <%= submit_tag 'Authenticate with OAuth', class: 'btn btn-primary' %>
  <% end %>
</div>